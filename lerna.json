{
  "packages": [
    "packages/*",
    "packages/ngx-conveyer/projects/ngx-conveyer"
  ],
  "version": "independent",
  "lernaHelperOptions": {
    "deployFileMap": [
      {
        "basePath": "packages/conveyer/dist",
        "dists": [
          "demo/release/{{version}}/dist",
          "demo/release/latest/dist"
        ]
      }
    ],
    "beforeReleaseScripts": [
      "npm run packages:build",
      "npm run demo:build",
      "npm run demo:deploy"
    ]
  }
}
