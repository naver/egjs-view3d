{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "packages/ngx-view3d/projects/ngx-view3d"
  ],
  "version": "independent",
  "lernaHelperOptions": {
    "deployFileMap": [
      {
        "basePath": "packages/view3d/dist",
        "dists": [
          "demo/release/{{version}}/dist",
          "demo/release/latest/dist"
        ]
      }
    ],
    "beforeReleaseScripts": [
      "npm run packages:build",
      "npm run demo:build",
      "npm run demo:deploy"
    ]
  }
}
