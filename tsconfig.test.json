{
  "extends": "./tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "types": [
      "karma-chai",
      "chai-as-promised",
      "mocha",
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*.ts"
  ]
}
